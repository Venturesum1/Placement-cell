<link rel="stylesheet" href="<%= assetPath('css/update-profile.css') %>">
<% if(user.id == profile_user.id) {%>

  <div class="container-update-profile">
    <h3 class="container-update-profile__heading">Update profile</h3>
    <form
      action="/update"
      method="POST"
      class="update-profile"
    >
    
      <div class="update-profile__class">
        
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Username"
          value="<%= profile_user.username %>"
          required
        />
      </div>
      <div class="update-profile__class">
        
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Enter new password"
          required
        />
      </div>
      <div class="update-profile__class">
        
        <input
          type="password"
          class="form-control"
          id="confirm_password"
          name="confirm_password"
          placeholder="Enter confirm password"
          required
        />
      </div>
      
  
      <button type="submit" class="update-profile__class__btn">Update</button>
    </form>
  </div>
  
  <%} %>

  <style>
    .container-update-profile {
      margin: auto 5%;
      height: 75vh; }
      .container-update-profile__heading {
        font-size: 2rem;
        color: rgb(128, 0, 0);
        font-weight: 600;
        text-transform: uppercase; }
      .container-update-profile .update-profile {
        display: flex;
        flex-direction: column;
        gap: 1rem; }
        .container-update-profile .update-profile__class input {
          padding: 8px 15px;
          border: 1.5px solid rgb(128, 0, 0);
          outline: none;
          border-radius: 50px;
          font-size: 0.9rem;
          width: 25%; }
        .container-update-profile .update-profile__class label {
          margin-left: 5px; }
        .container-update-profile .update-profile__class select {
          padding: 8px 15px;
          border: 1.5px solid rgb(128, 0, 0);
          outline: none;
          border-radius: 50px;
          font-size: 0.9rem;
          width: 16%; }
        .container-update-profile .update-profile__class__btn {
          padding: 8px 15px;
          background-color: rgb(128, 0, 0);
          outline: none;
          border-radius: 50px;
          font-size: 0.9rem;
          width: 28%;
          margin-bottom: 10px;
          color: white;
          border: none; }
        .container-update-profile .update-profile__class__btn:hover {
          cursor: pointer;
          background-color: #480101; }
    
  </style>
  