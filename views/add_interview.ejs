<link rel="stylesheet" href="<%= assetPath('css/add-interview.css') %>">
<% if (locals.user) {%>
  <div class="container-add-interview">
  <p class="container-add-interview__heading">Add an interview </p>

  <form class="add-interview" action="/interview/create" method="POST">

    <div class="add-interview__class company">
      
      <input type="text" class="form-control" placeholder="Enter company name" id="company" name="company" required />
    </div>

    <div class="add-interview__class date">
      
      <input type="date" class="form-control" placeholder="Enter interview date" id="date" name="date" required />
    </div>

    <div class="add-interview__class__btn">
      <button type="submit" class="btn btn-primary">Add interview</button>
    </div>

  </form>
</div>
</div>

<%} %>

<style>
  .container-add-interview {
    margin: auto 5%;
    height: 75vh; }
    .container-add-interview__heading {
      font-size: 1.5rem;
      color: rgb(128, 0, 0);
      text-transform: uppercase;
      font-weight: 600; }
    .container-add-interview .add-interview {
      display: flex;
      flex-direction: column;
      gap: 1rem; }
      .container-add-interview .add-interview__class input {
        padding: 8px 15px;
        border: 1.5px solid rgb(128, 0, 0);
        outline: none;
        border-radius: 50px;
        font-size: 0.9rem;
        width: 25%; }
      .container-add-interview .add-interview__class__btn button {
        padding: 8px 15px;
        background-color: rgb(128, 0, 0);
        outline: none;
        border-radius: 50px;
        font-size: 0.9rem;
        width: 28%;
        color: white;
        border: none; }
  
</style>